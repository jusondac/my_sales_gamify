<section class="dashboard-stats px-5">
  <div class="mb-8 text-center mt-8">
    <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-2">Dashboard</h2>
    <% if @current_supplier %>
      <h3 class="text-6xl font-bold text-gray-600 dark:text-gray-300">
        <%= @current_supplier.name %>
      </h3>
    <% end %>
    <!-- Time Period Filter -->
    <div class="flex justify-center space-x-4 mt-6">
      <button class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Today</button>
      <button class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300">This Week</button>
      <button class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300">This Month</button>
    </div>
  </div>
  <div class="w-full border border-gray-700 flex rounded-lg overflow-hidden">
    <div class="flex flex-col items-center w-1/3 border-r border-gray-700 py-3 bg-white dark:bg-gray-900">
      <div class="text-gray-500 text-sm mb-2">Orders</div>
      <div class="text-4xl font-extrabold bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent mb-2">
        <%= @orders_created %>
      </div>
      <div class="flex justify-between gap-4 text-xs text-gray-500">
        <div class="flex flex-col items-center">
          <span class="bg-gradient-to-r from-blue-500 to-blue-400 bg-clip-text text-transparent font-semibold"><%= @orders_pending %></span>
          <span>Pending</span>
        </div>
        <div class="flex flex-col items-center">
          <span class="bg-gradient-to-r from-green-500 to-green-400 bg-clip-text text-transparent font-semibold"><%= @orders_approved %></span>
          <span>Completed</span>
        </div>
        <div class="flex flex-col items-center">
          <span class="bg-gradient-to-r from-red-500 to-pink-500 bg-clip-text text-transparent font-semibold"><%= @orders_cancelled %></span>
          <span>Cancelled</span>
        </div>
      </div>
    </div>
    <div class="flex flex-col items-center w-1/3 border-r border-gray-700 py-3 bg-white dark:bg-gray-900">
      <div class="text-gray-500 text-sm mb-2">Active Suppliers</div>
      <div class="text-4xl font-extrabold bg-gradient-to-r from-gray-400 via-orange-500 to-red-500 bg-clip-text text-transparent">
        <%= @suppliers %>
      </div>
    </div>
    <div class="flex flex-col items-center w-1/3 py-3 bg-white dark:bg-gray-900">
      <div class="text-gray-500 text-sm mb-2">Products</div>
      <div class="text-4xl font-extrabold bg-gradient-to-r from-green-400 via-blue-500 to-purple-500 bg-clip-text text-transparent">
        <%= @products %>
      </div>
    </div>
  </div>
</section>