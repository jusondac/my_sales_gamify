<section class="dashboard-stats px-5">
  <div class="mb-8 text-center mt-8">
    <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-2">Dashboard</h2>
    <h3 class="text-6xl font-bold text-gray-600 dark:text-gray-300">
      Welcome, <span class="font-semibold text-blue-600 dark:text-blue-400"><%= Current.user.username %></span>
    </h3>
    <!-- Time Period Filter -->
    <div class="flex justify-center space-x-4 mt-6">
      <button class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Today</button>
      <button class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300">This Week</button>
      <button class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300">This Month</button>
    </div>
  </div>
  <!-- Main Stats Cards -->
  <div class="grid grid-cols-2 gap-4 mb-6">
    <div class="border border-gray-800 dark:border-gray-600 rounded-lg flex items-center p-6 shadow-md">
      <div class="bg-green-100 p-3 rounded-full mr-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div>
        <p class="text-gray-500 dark:text-gray-400">Total Profit</p>
        <p class="text-3xl font-bold">$<%= number_with_delimiter(@profit) || 0 %></p>
        <p class="text-sm text-green-500">↑ 12% from last period</p>
      </div>
    </div>
    <div class="border border-gray-800 dark:border-gray-600 rounded-lg flex items-center p-6 shadow-md">
      <div class="bg-blue-100 p-3 rounded-full mr-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
      </div>
      <div>
        <p class="text-gray-500 dark:text-gray-400">Orders Created</p>
        <p class="text-3xl font-bold"><%= @order_created || 0 %></p>
        <p class="text-sm text-green-500">↑ 8% from last period</p>
      </div>
    </div>
  </div>
  <!-- Order Status Cards -->
  <div class="grid grid-cols-3 gap-4 mb-8">
    <div class="border border-gray-800 dark:border-gray-700 rounded-lg p-4 text-center shadow-md">
      <div class="bg-green-100 w-12 h-12 mx-auto mb-3 rounded-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      <p class="text-4xl font-bold"><%= @orders_approved || 0 %></p>
      <p class="text-gray-600 dark:text-gray-400">Orders Approved</p>
    </div>
    <div class="border border-gray-800 dark:border-gray-700 rounded-lg p-4 text-center shadow-md">
      <div class="bg-yellow-100 w-12 h-12 mx-auto mb-3 rounded-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <p class="text-4xl font-bold"><%= @orders_pending || 0 %></p>
      <p class="text-gray-600 dark:text-gray-400">Orders Pending</p>
    </div>
    <div class="border border-gray-800 dark:border-gray-700 rounded-lg p-4 text-center shadow-md">
      <div class="bg-red-100 w-12 h-12 mx-auto mb-3 rounded-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </div>
      <p class="text-4xl font-bold"><%= @orders_cancelled || 0 %></p>
      <p class="text-gray-600 dark:text-gray-400">Orders Cancelled</p>
    </div>
  </div>
  <!-- Chart Section -->
  <div class="border border-gray-800 dark:border-gray-700 rounded-lg p-4 shadow-md mb-8">
    <h3 class="text-xl font-semibold mb-4">Sales Trends</h3>
    <div class="bg-gray-100 dark:bg-gray-800 h-64 rounded flex items-center justify-center">
      <!-- Placeholder for chart -->
      <p class="text-gray-500">Sales chart will be displayed here</p>
    </div>
  </div>
  <!-- Quick Actions -->
  <div class="border border-gray-800 dark:border-gray-700 rounded-lg p-4 shadow-md">
    <h3 class="text-xl font-semibold mb-4">Quick Actions</h3>
    <div class="grid grid-cols-4 gap-4">
      <a href="#" class="bg-blue-500 text-white rounded-lg p-4 text-center hover:bg-blue-600 transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <span>New Order</span>
      </a>
      <a href="#" class="bg-green-500 text-white rounded-lg p-4 text-center hover:bg-green-600 transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <span>View Reports</span>
      </a>
      <a href="#" class="bg-purple-500 text-white rounded-lg p-4 text-center hover:bg-purple-600 transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <span>Manage Team</span>
      </a>
      <a href="#" class="bg-yellow-500 text-white rounded-lg p-4 text-center hover:bg-yellow-600 transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span>Settings</span>
      </a>
    </div>
  </div>
</section>