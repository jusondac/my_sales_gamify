<%= form_with(model: order_detail, class: "contents text-white flex flex-col gap-5 mt-4" ) do |form| %>
  <% if order_detail.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(order_detail.errors.count, "error") %> prohibited this order_detail from being saved:</h2>

      <ul>
        <% order_detail.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :order_id, placeholder: "order_id", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": order_detail.errors[:order_id].none?, "border-red-400 focus:outline-red-600": order_detail.errors[:order_id].any?}] %>
  </div>

  <div>
    <%= form.text_field :product_id, placeholder: "product_id", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": order_detail.errors[:product_id].none?, "border-red-400 focus:outline-red-600": order_detail.errors[:product_id].any?}] %>
  </div>

  <div>
    <%= form.text_field :payment_id, placeholder: "payment_id", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": order_detail.errors[:payment_id].none?, "border-red-400 focus:outline-red-600": order_detail.errors[:payment_id].any?}] %>
  </div>

  <div>
    <%= form.text_field :discount, placeholder: "discount", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": order_detail.errors[:discount].none?, "border-red-400 focus:outline-red-600": order_detail.errors[:discount].any?}] %>
  </div>

  <div>
    <%= form.number_field :service_fee, placeholder: "service_fee", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": order_detail.errors[:service_fee].none?, "border-red-400 focus:outline-red-600": order_detail.errors[:service_fee].any?}] %>
  </div>

  <div>
    <%= form.submit nil, class:"font-bold px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-500 inline-flex items-center" %>
  </div>
<% end %>